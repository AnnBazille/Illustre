@model PreviewImageModel

<div class="card">
    <img src="@Model.Image" class="card-img-top">
    <div class="card-body">
        <a role="button"
           class="btn btn-dark"
           asp-controller="Media"
           asp-action="GetImage"
           asp-route-imageId="@Model.ImageId">@Model.Title</a>
    </div>
</div>
