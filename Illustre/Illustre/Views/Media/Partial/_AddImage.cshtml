@model AddImageRequest

<form method="post" enctype="multipart/form-data" action="/Media/AddImage">
    <div class="input-group mb-3">
        <input type="text" class="form-control" asp-for="Title" placeholder="title" value="@Model.Title">
        <a role="button" class="btn btn-dark" asp-controller="Media" asp-action="ManageTags" asp-route-isFirstAttempt="true">Manage Tags</a>
        <div class="mb-3">
            <label for="formFile" class="form-label">Default file input example</label>
            <input class="form-control" type="file" id="formFile" asp-for="@Model.File">
        </div>
        <button type="submit" class="btn btn-outline-dark">Add Image</button>
    </div>
</form>
