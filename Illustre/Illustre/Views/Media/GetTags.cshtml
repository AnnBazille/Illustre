@model PreviewImagesModel

@{
    ViewData["Title"] = "Tags";
}

<div id="illustre-show-image-container">
    @{
        foreach (var item in Model.Images)
        {
            @await Html.PartialAsync("~/Views/Media/Partial/_PreviewTag.cshtml",
                                    item)
        }
    }
</div>

@await Html.PartialAsync("~/Views/Shared/_Pagination.cshtml",
                         new PaginationModel()
                         {
                             Total = Model.Total,
                             Skip = Model.SearchModel.Skip,
                             Controller = "Media",
                             Action = "GetTags",
                         })
